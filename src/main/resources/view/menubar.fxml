<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.MenuBarController"
          stylesheets="@menubar.css"
          prefHeight="75.0"
          prefWidth="1200.0">

    <HBox GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          prefHeight="50"
          prefWidth="1000">
        <TextField text="placeholder1"
                   prefWidth="100"
                   prefHeight="50"
                   editable="false"/>

        <TextField text="placeholder2"
                   prefWidth="100"
                   prefHeight="50"
                   editable="false"/>

        <TextField text="placeholder3"
                   prefWidth="100"
                   prefHeight="50"
                   editable="false"/>
    </HBox>

    <HBox GridPane.columnIndex="1"
          GridPane.rowIndex="0"
          prefHeight="50"
          prefWidth="200">
        <Button text="Log Out"
                prefWidth="100"
                prefHeight="50"
                onAction="#handleLogOut"/>
        <Button text="Back"
                prefWidth="100"
                prefHeight="50"
                onAction="#handleReturnToDashboard"/>
    </HBox>

    <HBox GridPane.columnSpan="2"
          GridPane.rowIndex="1"
          prefHeight="25"/>
</GridPane>
